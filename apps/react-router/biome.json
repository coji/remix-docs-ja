{
  "root": false,
  "extends": "//",
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "files": {
    "includes": [
      "**",
      "!worker-configuration.d.ts",
      "!app/styles/globals.css",
      "!app/styles/docs.css"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      },
      "suspicious": {
        "useAwait": "error"
      }
    }
  }
}
