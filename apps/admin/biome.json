{
  "root": false,
  "extends": "//",
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": ["**", "!app/styles/globals.css"]
  },
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      },
      "suspicious": {
        "useAwait": "error",
        "noRedeclare": "off"
      }
    }
  }
}
