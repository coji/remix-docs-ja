{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "deploy": {
      "dependsOn": ["^deploy"],
      "outputs": [],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": ["dist/**", "build/**"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "validate": {
      "dependsOn": ["^validate"],
      "cache": false
    }
  }
}
